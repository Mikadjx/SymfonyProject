{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block stylesheets %}

  <link rel="stylesheet" href="{{ asset('assets/css/signin.css') }}">

{% endblock %}

{% block body %}

<div class="slide"> </div>
  <section class="main">

        <div class="container">
            <h2>se connecter</h2>
<form method="post" action="" class="formulaire" >
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

<div class="mail">
                    <label for="inputEmail">Adresse mail</label>
                    <input type="email" value="{{ last_username }}" class="form-control" name="email" id="inputEmail" autocomplete="email" required autofocus placeholder="Veuillez entrer votre adresse mail">
                </div>
           <div class="mdp">
                    <label for="inputPassword">Mot de passe</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required placeholder="Veuillez entrer votre mot de passe">
                </div>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

 <div class="btn login">
                    <input type="submit" value="se connecter">
                </div>

            </form>
            <div class="btn_2">
                <div class="btn_1">
                    <a href="#"><button class="forget_password">mot de passe oublier</button></a>
                </div>
                <div class="btn">
                    <a href="{{path('app_signup')}}"><button class="signup">Cr√©er son compte</button></a>
                </div>
            </div>
        </div>
    </section>

 {% block footer %}{% endblock %}
{% endblock %}




       
                

               